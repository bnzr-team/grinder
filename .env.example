# GRINDER Environment Configuration
# Copy to .env and fill in your values
# NEVER commit .env to git!

# Exchange API (Binance Futures)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Trading mode: live | paper | dry-run
GRINDER_MODE=dry-run

# Logging
GRINDER_LOG_LEVEL=INFO

# Risk limits (override defaults)
# GRINDER_DD_MAX_SESSION_PCT=0.05
# GRINDER_DD_MAX_DAILY_PCT=0.10
# GRINDER_INV_MAX_SYMBOL_USD=5000
# GRINDER_INV_MAX_TOTAL_USD=20000

# Alerting
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
# PAGERDUTY_API_KEY=your_pagerduty_key
